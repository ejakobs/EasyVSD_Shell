<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    android:background="@color/black"
    android:id="@+id/MainLayout"
    tools:context=".MainActivity" >

	<org.invotek.apps.easyvsd_shell.LockableHorizontalScrollView
		android:id="@+id/MainScrollView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:fillViewport="true"
		android:visibility="visible">


		<LinearLayout
			android:id="@+id/ScrollLayout"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:visibility="visible">

			<GridLayout
				android:id="@+id/NavOptions"
				android:layout_width="145dp"
				android:layout_height="match_parent"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:animateLayoutChanges="true"
				android:background="@color/dimgray"
				android:columnCount="4"
				android:rowCount="6"
				android:visibility="visible">

				<ScrollView
					android:id="@+id/ActivityGroups_vertical"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_column="0"
					android:layout_marginBottom="10dp"
					android:layout_row="5"
					android:animateLayoutChanges="true"
					android:background="@color/silver"
					android:fillViewport="true"
					android:visibility="visible" />

				<ScrollView
					android:id="@+id/ActivityPages_vertical"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_column="1"
					android:layout_marginBottom="10dp"
					android:layout_row="5"
					android:background="@color/silver"
					android:fillViewport="true"
					android:visibility="visible" />
			</GridLayout>

			<SurfaceView
				android:id="@+id/ActivityVideo"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_toRightOf="@+id/NavOptions"
				android:contentDescription="@string/activity_video"
				android:scaleType="fitStart"
				android:visibility="invisible" />

			<ImageView
				android:id="@+id/ActivityImage"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_toRightOf="@+id/NavOptions"
				android:contentDescription="@string/activity_image"
				android:scaleType="fitStart"
				android:visibility="visible" />

			<org.invotek.apps.easyvsd_shell.NewDrawingView
				android:id="@+id/dvDrawingView"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:layout_toRightOf="@id/NavOptions" />

			<GridLayout
				android:id="@+id/adminPanel"
				android:layout_width="145dp"
				android:layout_height="match_parent"
				android:layout_alignParentRight="true"
				android:background="@color/dimgray"
				android:columnCount="1"
				android:orientation="vertical"
				android:rowCount="17"
				android:visibility="visible">

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_newActivity"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="0"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_newPage"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="1"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_editHotspot"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="2"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_cancelHotspot"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="3"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_startRecording"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="4"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_endRecording"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="5"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_drawingMode"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="6"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_navMode"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="7"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_deleteHotspot"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="8"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_undo"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="9"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_redo"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="10"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_video_restart"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="11"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_video_skipback"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="12"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_video_play"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="13"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_video_skipforward"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="14"
					android:visibility="gone" />

				<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
					android:id="@+id/btn_video_pause"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="10dp"
					android:layout_row="15"
					android:visibility="gone" />

				<GridLayout
					android:id="@+id/DrawingOptions"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_alignParentRight="true"
					android:layout_below="@id/adminPanel"
					android:layout_column="0"
					android:layout_row="16"
					android:columnCount="2"
					android:rowCount="7"
					android:visibility="gone">

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/StylusM"
						android:layout_column="0"
						android:layout_row="0"
						android:padding="0dp"
						android:text="@string/stylus_width_m" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/StylusEL"
						android:layout_column="1"
						android:layout_row="0"
						android:padding="0dp"
						android:text="@string/stylus_width_el" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/StylusErase"
						android:layout_column="0"
						android:layout_gravity="top"
						android:layout_row="1"
						android:text="@string/stylus_erase" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ClearDrawing"
						android:layout_column="1"
						android:layout_gravity="top"
						android:layout_row="1"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ColorBlack"
						android:layout_column="0"
						android:layout_gravity="top"
						android:layout_row="2"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ColorBlue"
						android:layout_column="0"
						android:layout_gravity="top"
						android:layout_row="3"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ColorRed"
						android:layout_column="0"
						android:layout_gravity="top"
						android:layout_row="4"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ColorPurple"
						android:layout_column="0"
						android:layout_gravity="top"
						android:layout_row="5"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ColorPink"
						android:layout_column="1"
						android:layout_gravity="top"
						android:layout_row="2"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ColorYellow"
						android:layout_column="1"
						android:layout_gravity="top"
						android:layout_row="3"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ColorWhite"
						android:layout_column="1"
						android:layout_gravity="top"
						android:layout_row="4"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />

					<org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
						android:id="@+id/ColorLimeGreen"
						android:layout_column="1"
						android:layout_gravity="top"
						android:layout_row="5"
						android:text="@string/clear_drawings"
						android:textSize="24sp" />
				</GridLayout>
			</GridLayout>

		</LinearLayout>

	</org.invotek.apps.easyvsd_shell.LockableHorizontalScrollView>

	<org.invotek.apps.easyvsd_shell.AnimatingView
		android:id="@+id/AnimationViewRemoving"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

	<org.invotek.apps.easyvsd_shell.AnimatingView
		android:id="@+id/AnimationViewShowing"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

</RelativeLayout>
